@{
    ViewBag.Title = "Index";
}

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Atender Consulta</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Identificacion", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    <input class="form-control" type="text" name="IdCliente" id="IdCliente" />
                    <input class="btn btn-primary" type="button" name="Buscar" id="Buscar" value="Buscar Cliente" />
                </div>
            </div>
        </div>
    </div>
}
<script>
$(document).ready(function () {
    $("#Buscar").click(function () {

        if ((document.getElementById("IdCliente").value != "")) {
            $.post('@Url.Action("BuscarCliente","Reporte")', { id: document.getElementById("IdCliente").value })
                .done(function (data) {
                    $(location).attr('href','http://localhost:51104/Reporte/ListaReportes')
                });
        } else {
            alert("COMPLETE LA INFORMACION");
        }
    });

    });


</script>
