                                @Html.DisplayFor(modelItem => item.IdReporte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cedula)
                            </td>
                            <td>
                                @Html.ActionLink("Generar Reporte", "GenerarReporte", new {  id=item.IdReporte  }, new { @class = "btn btn-success btn-sm" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="panel-footer">Cantidad = @Model.Count()</div>
        </div>
    </div>
</div>
