@model IEnumerable<ProyectoPurasol.Models.Cliente>
@{
    ViewBag.Title = "Consulta Cliente";
}

<style>
    .btn-success {
        background: #E1E65F;
        border-color: #E1E65F;
    }

    .panel-primary {
        border-color: white;
    }

    .btn-danger {
        background: #E1E65F;
        border-color: #E1E65F;
    }
</style>

<div>
    <div class="panel panel-primary">
        <div class="panel-body ">
            <div class="modal-footer">
                @Html.ActionLink("Nuevo Cliente", "Crear", "Cliente", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary pull-left" })
            </div>
            @Html.ValidationMessage("Detalle")
            <table class="display nowrap" id="dataTables-example" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Identificacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Correo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Identificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                                @Html.DisplayFor(modelItem => item.Apellido)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Correo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", new { id = item.Identificacion }, new { @class = "btn btn-success btn-sm" }) |
                                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdCliente }, new { @class = "btn btn-danger btn-sm", onclick = "return Confirmar(this);" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="panel-footer">Cantidad = @Model.Count()</div>
        </div>
    </div>
</div>

