
@model IEnumerable<ProyectoPurasol.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<style>
    .btn-success {
        background: #E1E65F;
        border-color: #E1E65F;
    }
    .panel-primary{ 
        border-color:white;
    }
    .btn-danger {
        background: #E1E65F;
        border-color: #E1E65F;
    }
</style>

<div class="panel panel-primary">
    <div class="panel-body ">
        <div class="modal-body">
            <div class="modal-footer">
                @Html.ActionLink("Nuevo Usuario", "Create", "Usuario", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary pull-left" })
            </div>
            <div class="form-horizontal">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NombreUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Activo)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Activo)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { usuario = item.NombreUsuario }, new { @class = "btn btn-success btn-sm" }) |

                                @Html.ActionLink("Delete", "Delete", new { id = item.NombreUsuario }, new { @class = "btn btn-danger btn-sm" }) |

                                @Html.ActionLink("Editar Roles", "EditarRoles", new { id = item.NombreUsuario }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }

                </table>
                <div class="panel-footer">Cantidad = @Model.Count()</div>
            </div>
        </div>
    </div>
</div>