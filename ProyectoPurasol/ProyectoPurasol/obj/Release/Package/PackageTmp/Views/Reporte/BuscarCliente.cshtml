@{
    ViewBag.Title = "Consultar Cliente";
}


<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

<script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
<style>
    .btn-primary {
        background: #E1E65F;
        border-color: #E1E65F;
        color: white;
        float: right;
    }
</style>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}

@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Identificacion", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    <input class="form-control" type="text" name="IdCliente" id="IdCliente" />
                    <br />
                    <input class="btn btn-primary" type="button" name="Buscar" id="Buscar" value="Buscar Cliente" />
                </div>
            </div>
        </div>
    </div>
}
<script>
$(document).ready(function () {
    $("#Buscar").click(function () {

        if ((document.getElementById("IdCliente").value != "")) {
            $.post('@Url.Action("BuscarCliente","Reporte")', { id: document.getElementById("IdCliente").value })
                .done(function (data) {
                    $(location).attr('href','https://purasol.azurewebsites.net/Reporte/ListaReportes')
                });
        } else {
            alert("Complete la información");
        }
    });

    });


</script>
